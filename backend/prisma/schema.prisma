generator client {
  provider = "prisma-client-js"
}

datasource db {
  //Armazenamento local:
  provider = "sqlite"
  url      = env("DATABASE_URL")

  //Usando o Supabase
  //provider = "postgresql"
  //url      = env("SUPABASE_URL")
}

model Email {
  id           Int      @id @default(autoincrement())
  remetente    String
  destinatario String
  dataEnvio    DateTime
  assunto      String
  corpo        String
  estado       String?
  municipio    String?
  criadoEm     DateTime @default(now())
}
